<odoo>
    <record id="view_superset_dashboard_tree" model="ir.ui.view">
        <field name="name">superset.dashboard.config.tree</field>
        <field name="model">g2p.superset.dashboard.config</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
                <field name="url" placeholder="Start with 'http://' or 'https://" />
                <field name="menu_name" />
                <field name="group_name" />
            </tree>
        </field>
    </record>

    <record id="action_superset_dashboard_config" model="ir.actions.act_window">
        <field name="name">Superset Dashboard Configuration</field>
        <field name="res_model">g2p.superset.dashboard.config</field>
        <field name="view_mode">tree</field>
    </record>


    <record id="action_superset_dashboard_embedded" model="ir.actions.client">
        <field name="name">Embedded Dashboard</field>
        <field name="tag">g2p.superset_dashboard_embedded</field>
    </record>


    <menuitem
        id="menu_superset_dashboards"
        name="Superset Dashboards"
        sequence="1"
        web_icon="g2p_superset_dashboard,static/description/dashboard_icon.png"
    />


    <menuitem
        id="menu_superset_root_dashboard_config"
        name="Configuration"
        sequence="10"
        parent="g2p_superset_dashboard.menu_superset_dashboards"
        action="action_superset_dashboard_config"
        groups="group_superset_admin"
    />

    <menuitem
        id="menu_superset_dashboard_config"
        name="Dashboard Configuration"
        parent="menu_superset_root_dashboard_config"
        action="action_superset_dashboard_config"
    />

</odoo>

<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- TODO: Remove all hardcoding -->
    <template id="login_page" name="G2P Registration Portal Login">

        <t t-call="g2p_agent_portal_base.base">
            <t t-set="no_header" t-value="1" />
            <t t-set="no_footer" t-value="1" />
            <t t-set="body_classname" t-value="'bg-100'" />
            <link rel="stylesheet" href="/g2p_agent_portal_base/static/src/css/portal.css" />
            <div class="ssp-login-body">
                <div class="ssp-login-box">
                    <div class="logo-box">
                        <img src="#" class="logo" alt="Official Logo" />
                    </div>
                    <form
                        class="oe_login_form"
                        role="form"
                        t-attf-action="/portal/login"
                        method="post"
                        onsubmit="this.action = '/portal/login' + location.hash"
                    >
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                        <input type="hidden" name="redirect" value="/portal/home" />
                        <div class="form-group field-login">
                            <label for="login">Email or Phone</label>
                            <input
                                type="text"
                                placeholder="Enter email or phone"
                                name="login"
                                t-att-value="login"
                                id="login"
                                t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                required="required"
                                autofocus="autofocus"
                                autocapitalize="off"
                            />
                        </div>

                        <div class="form-group field-password">
                            <label for="password">Password</label>
                            <span class="reset-password">
                                <a href="/web/reset_password">Reset Password</a>
                            </span>
                            <input
                                type="password"
                                placeholder="Enter password"
                                name="password"
                                id="password"
                                t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                required="required"
                                autocomplete="current-password"
                                t-att-autofocus="'autofocus' if login else None"
                                maxlength="4096"
                            />
                        </div>

                        <p class="alert alert-danger" t-if="error" role="alert">
                            <t t-out="error" />
                        </p>
                        <p class="alert alert-success" t-if="message" role="status">
                            <t t-out="message" />
                        </p>

                        <div
                            t-attf-class="clearfix oe_login_buttons text-center mb-1 {{'pt-2' if form_small else 'pt-3'}}"
                        >
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                            <div class="o_login_auth" />
                        </div>

                        <input type="hidden" name="redirect" t-att-value="redirect" />
                    </form>
                </div>
                <div class="login-bottom-text"> Facing any challenges? <a href="#">Help</a> </div>
            </div>
        </t>
    </template>
</odoo>
